[core]
	pager = delta
[delta]
    plus-color = "#012800"
    minus-color = "#340001"
    syntax-theme = Monokai Extended
    line-numbers = true
[interactive]
    diffFilter = delta --color-only
{{- if(index . "name")}}
[user]
	name = {{ .name | quote }}
{{ end }}
{{- if(index . "email")}}
[user]
	email = {{ .email | quote }}
{{ end }}
{{- if(index . "github")}}
[github]
	user = {{ .github.user | quote }}
{{- end }}
{{- if(index . "bitbucket")}}
[bitbucket]
	user = {{ .bitbucket.user | quote }}
{{- end }}
[cores]
	excludesfile = ~/.gitignore_global
	editor = vim
	filemode = false
[pull]
	rebase = true
[credential]
	helper = cache
[init]
	defaultBranch = main
